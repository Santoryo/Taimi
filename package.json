{
  "name": "Taimi",
  "version": "1.0.0",
  "description": "Taimi is a RESTful API backend service for Tyria.Tools and GW2 Armory.",
  "license": "ISC",
  "author": "",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "tsoa:build": "tsoa spec-and-routes",
    "build": "tsoa spec-and-routes && tsc",
    "start": "node ./build/src/app.js",
    "start:worker": "node ./build/src/worker.js",
    "dev": "nodemon --watch \"src/**/*.ts\" --exec \"npm run build:dev\"",
    "build:dev": "npm run tsoa:build && ts-node src/app.ts",
    "dev:worker": "nodemon --watch \"src/**/*.ts\" --exec \"ts-node src/worker.ts\"",
    "lint": "eslint 'src/**/*.ts'",
    "db:migrate": "drizzle-kit migrate",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "prepare": "husky install || true"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^25.0.9",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/parser": "^8.53.1",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "express": "^5.2.1",
    "globals": "^17.1.0",
    "install": "^0.13.0",
    "nodemon": "^3.1.11",
    "npm": "^11.7.0",
    "prettier": "^3.8.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.91.0",
    "@tsoa/runtime": "^7.0.0-alpha.0",
    "@wesleytodd/openapi": "^1.1.0",
    "bottleneck": "^2.19.5",
    "bullmq": "^5.66.6",
    "drizzle-orm": "^0.45.1",
    "guildwars2-ts": "^1.6.0",
    "ioredis": "^5.9.2",
    "jose": "^6.1.3",
    "jsonwebtoken": "^9.0.3",
    "morgan": "^1.10.1",
    "node-cron": "^4.2.1",
    "node-fetch": "^3.3.2",
    "pino": "^10.3.0",
    "pino-pretty": "^13.1.3",
    "pocketbase": "^0.21.1",
    "postgres": "^3.4.8",
    "swagger-ui-express": "^5.0.1",
    "tsoa": "^7.0.0-alpha.0"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  }
}
